
<%= form_for @recipe do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :description %>
	<%= f.text_area :description%>
	<%= f.label :directions %>
	<%= f.text_area :directions%>

	<%= f.label :user_name %>
	<%= f.text_field :user_name, list: "all_users" %>

	<datalist id="all_users">
		<% User.all.each do |user| %>
			<option value="<%=user.name%>">
		<%end%>
	</datalist>





	<%= f.submit submit_text %>

		
<%end%>